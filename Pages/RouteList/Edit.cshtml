@page
@model Climbing4Everyone.Pages.RouteList.EditModel
@using Climbing4Everyone2._0.Utility;

<br />
<h2 class="text-info">Edit Route</h2>
<br />

<div class="border containter" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Route.ID" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.RouteName"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.RouteName" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.RouteName" class="text-danger"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.RouteDifficulty"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.RouteDifficulty" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.RouteDifficulty" class="text-danger"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.RockName"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.RockName" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.RockName" class="text-danger"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.RegionName"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.RegionName" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.RegionName" class="text-danger"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.ApproachTime"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.ApproachTime" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.ApproachTime" class="text-danger"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.RockHeight"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.RockHeight" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.RockHeight" class="text-danger"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.RockExposure"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.RockExposure" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.RockExposure" class="text-danger"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.FloorUnder"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.FloorUnder" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.FloorUnder" class="text-danger"></span>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.RouteFormations"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.RouteFormations" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.RouteFormations" class="text-danger"></span>

        <div class="table-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.RoutesOnRock"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.RoutesOnRock" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Route.RoutesOnRock" class="text-danger"></span>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.Description"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.Description" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.MapLink"></label>
            </div>

            <div class="col-6">
                <input asp-for="Route.MapLink" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Route.IsShared"></label>
            </div>

            <div class="col-6">
                <input type="checkbox" asp-for="Route.IsShared" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>

            <div class="col-3">
                @if (User.IsInRole(SD.AdminEndUser))
                {
                    <a asp-page="/RouteList/Admin" class="btn btn-outline-success form-control">Back to List</a>
                }
                @if (User.IsInRole(SD.CustomerEndUser))
                {
                    <a asp-page="MyList" class="btn btn-outline-success form-control">Back to List</a>
                }
            </div>
        </div>

    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}